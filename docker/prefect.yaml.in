# pull section allows you to provide instructions for cloning this project in remote locations
pull:
- prefect.deployments.steps.git_clone:
    id: clone-step
    repository: GIT_REPO
    branch: GIT_TAG

- prefect.deployments.steps.run_shell_script:
    id: update-build
    script: |
      apt-get update
      apt-get install -y libxml2-dev libxslt1-dev zlib1g-dev gcc
      pip install --upgrade pip setuptools wheel flit packaging

# uninstall any local sous-chef, so the most recent version is guaranteed in next step
- prefect.deployments.steps.run_shell_script:
    id: uninstall-local-sous-chef
    stream_output: true
    script: |
      pip uninstall -y sous-chef


- prefect.deployments.steps.pip_install_requirements:
    directory: '{{ clone-step.directory }}'
    requirements_file: requirements-flow.txt
    stream_output: true

- prefect.deployments.steps.run_shell_script:
    id: override-sous-chef-if-requested
    stream_output: true
    script: |
      if [ -n "${SOUS_CHEF_REF:-}" ]; then
        echo "Overriding sous-chef with ref ${SOUS_CHEF_REF}"
        pip install --no-cache-dir "sous-chef @ git+https://github.com/mediacloud/sous-chef@${SOUS_CHEF_REF}"
      else
        echo "SOUS_CHEF_REF not set; using default sous-chef from requirements-flow.txt"
      fi


# the deployments section allows you to provide configuration for deploying flows
deployments:
- name: DEPLOYMENT_NAME
  version:
  tags:
  - kitchen
  description: Sous Chef Kitchen (api managed flows)
  entrypoint: sous_chef_kitchen/kitchen/flow.py:kitchen_base
  parameters: {}
  work_pool:
    name: WORK_POOL_NAME
    work_queue_name:
    job_variables:
      image: '{{ build-image.image }}'
  schedules: []
